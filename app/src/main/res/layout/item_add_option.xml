<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clItemAddOption"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_35sdp"
    android:background="@drawable/bg_rc_add_option"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glV07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:id="@+id/tvNameOption"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_5sdp"
        android:singleLine="true"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toStartOf="@+id/glV07"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/glV07"
        app:layout_constraintTop_toTopOf="parent" />

    <jp.co.kojimachi.view.CustomSpinner
        android:id="@+id/tvSpinnerNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:isOptionBonus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewLine" />

</androidx.constraintlayout.widget.ConstraintLayout>