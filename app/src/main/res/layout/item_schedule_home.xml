<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemSchedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clItemSchedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0355" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1479" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStartImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7663" />

            <ImageView
                android:id="@+id/imgIcReservationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reservation_time"
                app:layout_constraintStart_toEndOf="@+id/glStartIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_reservation_time"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgIcReservationTime"
                app:layout_constraintStart_toEndOf="@+id/glStartTitle"
                app:layout_constraintTop_toTopOf="@id/imgIcReservationTime" />

            <TextView
                android:id="@+id/tvReservationTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@id/imgIcReservationTime"
                app:layout_constraintEnd_toStartOf="@+id/glStartImg"
                app:layout_constraintStart_toEndOf="@+id/glStartInfo"
                app:layout_constraintTop_toTopOf="@id/imgIcReservationTime" />

            <ImageView
                android:id="@+id/imgIcFacility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:src="@drawable/ic_facility"
                app:layout_constraintEnd_toEndOf="@+id/imgIcReservationTime"
                app:layout_constraintStart_toEndOf="@+id/glStartIcon"
                app:layout_constraintTop_toBottomOf="@+id/imgIcReservationTime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_facility"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgIcFacility"
                app:layout_constraintStart_toEndOf="@+id/glStartTitle"
                app:layout_constraintTop_toTopOf="@id/imgIcFacility" />

            <TextView
                android:id="@+id/tvFacility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorMain"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@id/imgIcFacility"
                app:layout_constraintEnd_toStartOf="@+id/glStartImg"
                app:layout_constraintStart_toEndOf="@+id/glStartInfo"
                app:layout_constraintTop_toTopOf="@id/imgIcFacility" />

            <ImageView
                android:id="@+id/imgIcCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:src="@drawable/ic_course"
                app:layout_constraintStart_toEndOf="@+id/glStartIcon"
                app:layout_constraintTop_toBottomOf="@+id/imgIcFacility" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_course"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgIcCourse"
                app:layout_constraintStart_toEndOf="@+id/glStartTitle"
                app:layout_constraintTop_toTopOf="@id/imgIcCourse" />

            <TextView
                android:id="@+id/tvCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@id/imgIcCourse"
                app:layout_constraintEnd_toStartOf="@+id/glStartImg"
                app:layout_constraintStart_toEndOf="@+id/glStartInfo"
                app:layout_constraintTop_toTopOf="@id/imgIcCourse" />

            <ImageView
                android:id="@+id/imgBtnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_start_working_selector"
                app:layout_constraintStart_toEndOf="@+id/glStartImg"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>